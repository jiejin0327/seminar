                             VerticalOptions="CenterAndExpand"
                             Padding="5">

                    <Image Source="{local:ImageResource KioskPhoneApp.Images.account.jpg}"
                           Aspect="AspectFit"
                           WidthRequest="45"
                           HeightRequest="45"
                           HorizontalOptions="End"
                           BackgroundColor="Transparent"/>
                    <Entry WidthRequest="200"
